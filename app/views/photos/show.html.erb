<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-xs-9">
    <% if @photo.file.present? %>
        <%= image_tag(@photo.file_url, :width => "100%") if @photo.file.present? %>
    <% else %>
        <%= image_tag('http://res.cloudinary.com/hbp1mcgsv/image/upload/v1490105597/no-image_g3dnks.jpg', :width => "100%")%>
    <% end %>
  </div>

  <div class="col-xs-3">
    <p><b>Title: </b><%= @photo.title%></p>
    <p><b>Description: </b><%= @photo.description %></p>
    <p><b>Author: </b><%= @photo.user.email %></p>
    <p>
      <%= link_to 'Edit', edit_photo_path(@photo) %> |
      <%= link_to 'Delete', @photo, confirm: 'Are you sure?', method: :delete %> |
      <%= link_to 'Back', photos_path %>
    </p>
  </div>
</div>
