<%= form_for([@photo, @photo.comments.build]) do |f| %>

  <div class="form-inline">
    <%= f.text_field :content,:size=>"60", class: "form-control", placeholder: "Add Your comment...", autofocus: true, :minlength=>"3", :maxlength=>"200" %>
    <%= f.submit class: "btn btn-primary btn-lg round btn-sm" %>
  </div>

<% end %>
